// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      //"cmd-ctrl-e": "project_panel::ToggleFocus",
      "cmd-ctrl-g": "git_panel::ToggleFocus",
      "cmd-t": "workspace::OpenInTerminal",
      "cmd-ctrl-t": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "!ContextEditor > Editor && mode == full",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-i": "assistant::InlineAssist"
    }
  },
  {
    "context": "Terminal",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-i": "assistant::InlineAssist",
      "cmd-alt-up": "pane::SplitUp",
      "cmd-alt-down": "pane::SplitDown",
      "cmd-alt-left": "pane::SplitLeft",
      "cmd-alt-right": "pane::SplitRight",
      "cmd-alt-r": "terminal::RerunTask"
    }
  },
  {
    "context": "GitPanel",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-g": "git::Fetch",
      "ctrl-up": "git::Push",
      "ctrl-down": "git::Pull",
      "ctrl-shift-up": "git::ForcePush",
      "ctrl-d": "git::Diff",
      "ctrl-y": "git::StageAll",
      "ctrl-shift-y": "git::UnstageAll"
    }
  }
]
